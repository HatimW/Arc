{
  "name": "arc",
  "version": "1.0.0",
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "bundle": "esbuild js/main.js --bundle --format=iife --global-name=Arc --outfile=bundle.js",
    "ensure:icons": "node scripts/ensure-placeholder-icons.js",
    "start": "npm run ensure:icons && npm run bundle && electron .",
    "package": "npm run ensure:icons && npm run bundle && electron-builder",
    "test": "node --test",
    "prepare:pr": "npm run ensure:icons && npm run bundle && npm test"
  },
  "build": {
    "appId": "com.arc.desktop",
    "productName": "Arc",
    "files": [
      "index.html",
      "bundle.js",
      "js/**/*",
      "style.css",
      "assets/**/*",
      "electron-main.js",
      "electron-preload.js",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "writeUpdateInfo": false
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "differentialPackage": false
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  },
  "dependencies": {
    "electron": "^39.2.7",
    "esbuild": "^0.25.9"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "fake-indexeddb": "^5.0.2",
    "jsdom": "^24.1.3"
  },
  "overrides": {
    "@electron/asar": "^4.0.1",
    "@electron/get": "^4.0.2",
    "boolean": "file:vendor/boolean",
    "glob": "^11.0.1"
  }
}
