{
  "name": "arc",
  "version": "1.0.0",
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "bundle": "esbuild js/main.js --bundle --format=iife --global-name=Arc --outfile=bundle.js",
    "ensure:icons": "node scripts/ensure-placeholder-icons.js",
    "start": "npm run ensure:icons && npm run bundle && electron .",
    "package": "npm run ensure:icons && npm run bundle && electron-builder",
    "test": "node --test",
    "prepare:pr": "npm run ensure:icons && npm run bundle && npm test"
  },
  "build": {
    "appId": "com.arc.desktop",
    "productName": "Arc",
    "files": [
      "index.html",
      "bundle.js",
      "bundle.js.map",
      "style.css",
      "js/**/*",
      "docs/**/*",
      "assets/**/*",
      "electron-main.js",
      "electron-preload.js",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "identity": "${MAC_IDENTITY}",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "certificateFile": "${WIN_CERTIFICATE_FILE}",
      "certificatePassword": "${WIN_CERTIFICATE_PASSWORD}",
      "certificateSubjectName": "${WIN_CERTIFICATE_SUBJECT_NAME}"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.9",
    "fake-indexeddb": "^5.0.2",
    "jsdom": "^24.1.3"
  }
}
